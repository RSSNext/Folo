{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "noImplicitOverride": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@locales/*": ["../../locales/*"]
    },
    "jsx": "preserve",
    "types": ["@follow/types/global", "vite/client"]
  },
  "include": ["**/*.ts", "**/*.tsx", "nativewind-env.d.ts"],
  "exclude": ["./native", "./web-app", "../../node_modules"]
}
