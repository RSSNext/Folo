{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@locales/*": ["../../locales/*"]
    },
    "jsx": "preserve",
    "types": ["@follow/types/global"]
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts", "nativewind-env.d.ts"],
  "exclude": ["./native", "./web-app"]
}
